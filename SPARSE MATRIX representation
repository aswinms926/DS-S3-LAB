// SPARSE MATRIX
#include <stdio.h>

void
main ()
{
  int i, j, r, c, k = 1;
  printf ("Enter the row and column size : ");
  scanf ("%d%d", &r, &c);
  int a[r][c];
  printf ("Enter the array elements : ");
  for (i = 0; i < r; i++)
	{
	  for (j = 0; j < c; j++)
		{
		  scanf ("%d", &a[i][j]);
		}
	}
  int b[r * c + 1][3];
  b[0][0] = r;
  b[0][1] = c;
  for (i = 0; i < r; i++)
	{
	  for (j = 0; j < c; j++)
		{
		  if (a[i][j] != 0)
			{
			  b[k][0] = i;
			  b[k][1] = j;
			  b[k][2] = a[i][j];
			  k++;
			}
		}
	}
  b[0][2] = k - 1;
  printf ("Sparse matrix representation  : ");
  for (i = 0; i <= b[0][2]; i++)
	{
	  for (j = 0; j < 3; j++)
		{
		  printf ("%d\t", b[i][j]);
		}
	  printf ("\n");
	}
}
/**************************************************************************************
OUTPUT

Enter the row and column size : 2
2
Enter the array elements : 2
4
6
7
Sparse matrix representation  : 2	2	4	
0	0	2	
0	1	4	
1	0	6	
1	1	7	
***************************************************************************************/
