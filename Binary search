
#include <stdio.h>

int main()
{
    int i,n,num,c=0,temp,j;
    c++;
    printf("Enter the array size  : ");
    scanf("%d",&n);
    int a[n];
        printf("Enter the array elements  : ");
    for(i=0;i<n;i++)
    {
         scanf("%d",&a[i]);
         c++;
         c++;
    }c++;
    for(i=0;i<n-1;i++)
    {
        c++;
        for(j=0;j<n-i-1;j++)
        {
            c++;
            if(a[j]>a[j+1])
            {
                c++;
                c++;
                temp=a[j];
                a[j]=a[j+1];
                a[j+1]=temp;
            }
        }c++;
    }c++;
    printf("sorted array is ");
    for(i=0;i<n;i++)
    {
         printf("%d ",a[i]);
         c++;
         c++;
    }c++;
    int I=0,r=n-1,mid=0;
    c+=3;
    printf("\nEnter the element to be searched  : ");
    scanf("%d",&num);
    while(I<=r)
    {
        c++;
        c++;
        int mid =(I+r)/2;
        
     if(a[mid]==num)
     {
         c++;
         c++;
         printf("Element is found at the index %d",mid);
         break;
     }
     else if (a[mid]>num)
     {
         c++;
         c++;
         r=mid-1;
     }
     else  if (a[mid]<num)
     {
         c++;
         c++;
         I=mid+1;
     }
    }c++;
    if(I>r)
    {
        c++;
        printf("element is not found");
    }
    
     
    printf("\ntime complexity is %d",c);
    printf("\nspace complexity is %d",24+4*n);
    return 0;
}
